<div class='container main-container'>
  <div class="col-md-4 col-sm-4 col-md-offset-4 text-left">
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <div class="alert alert-danger">
        <h4><%= pluralize(@user.errors.full_messages.uniq.count, "error") %> prohibited this profile from being saved:</h4>
        <ul>
          <% @user.errors.full_messages.uniq.each do |msg| %>
          <li class="text-left"><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <% end %>
    <h1> New User </h1>
    <%= bootstrap_form_for :user do |f| %>
    <%= f.email_field :email, :placeholder => "Enter email", icon: "user" %>
    <%= f.text_field :name, :placeholder => "Enter name", icon: "pencil" %>
    <%= f.password_field :password, :placeholder => "Enter password", icon: "lock" %>
    <%= f.password_field :password_confirmation, :placeholder => "Enter password confirmation", icon: "lock"  %>
    <%= f.submit :class=>'btn btn-primary'%>
    <% end %>
  </div>
</div>